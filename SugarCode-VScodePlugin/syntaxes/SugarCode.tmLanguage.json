{
  "scopeName": "text.SugarCode",
  "patterns": [
    {
      "include": "#value"
    }
  ],
  "repository": {
    "comment": {
      "begin": "#",
      "end": "#",
      "name": "comment.block.SugarCode"
    },
    "number": {
      "match": "(?x)-?(?:0|[1-9]\\d*)(?:(?:\\.\\d+)?(?:[eE][+-]?\\d+)?)?",
      "name": "constant.numeric.json"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.SugarCode",
      "patterns": [
        {
          "include": "#stringcontent"
        }
      ]
    },
    "stringcontent": {
      "patterns": [
        {
          "match": "(?x)\\\\(?:[\"\\\\/bfnrt]|u[0-9a-fA-F]{4})",
          "name": "constant.character.escape.json"
        },
        {
          "match": "<.*>",
          "name": "constant.character.escape.json"
        },
        {
          "match": "\\\\.",
          "name": "invalid.illegal.unrecognized-string-escape.json"
        }
      ]
    },
    "constant": {
      "match": "\\b[TF]\\b",
      "name": "constant.language.SugarCode"
    },
    "function": {
      "match": "(>)(.*)(\\|)",
      "captures": {
        "1": {
          "name": "keyword.other.SugarCode"
        },
        "2": {
          "name": "support.function.SugarCode"
        },
        "3": {
          "name": "keyword.other.SugarCode"
        }
      }
    },
    "value": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#number"
        },
        {
          "include": "#string"
        },
        {
          "include": "#constant"
        },
        {
          "include": "#function"
        }
      ]
    }
  }
}
