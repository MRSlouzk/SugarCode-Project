{
  "comments": {
    "blockComment": ["#", "#"]
  },
  "brackets": [
    ["[", "]"],
    ["@条件", "@效果"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]", "notIn": ["string"] },
    { "open": "@条件", "close": "@效果", "notIn": ["string"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
  ]
}
