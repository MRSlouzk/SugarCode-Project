{
  "name": "sugarcode",
  "displayName": "SugarCode",
  "description": "SugarCode language extension by montmorillonite",
  "version": "0.0.1",
  "repository": "https://github.com/Monody-S/SugarCode-Project",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "publisher": "MRSlouu",
  "main": "./src/extension.js",
  "activationEvents": [],
  "contributes": {  
    "languages": [
      {
        "id": "SugarCode",
        "extensions": [
          ".sgc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "SugarCode",
        "scopeName": "text.SugarCode",
        "path": "./syntaxes/SugarCode.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "SugarCode",
        "path": "./snippets/SugarCode.code-snippets"
      }
    ]
  }
}
