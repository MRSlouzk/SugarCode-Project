{
  "scopeName": "source.SugarCode",
  "patterns": [
    {
      "begin": "#",
      "end": "#",
      "name": "comment.block.SugarCode"
    },
    {
      "match": "\\b([0-9][0-9]+\\.?[0-9]+)\\b",
      "name": "constant.numeric.SugarCode"
    },
    {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.SugarCode"
    },
    {
      "match": "\\b[TF]\\b",
      "name": "constant.language.SugarCode"
    },
    {
      "match": "(>)(.*)(\\|)(.*)",
      "captures": {
        "1": {"name":"constant.language.SugarCode"},
        "2": {"name":"support.function.SugarCode"},
        "3": {"name":"constant.language.SugarCode"},
        "4": {"name":"variable.parameter.SugarCode"}
      }
    }
  ]
}